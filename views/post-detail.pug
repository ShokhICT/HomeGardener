doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Post Detail
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
      
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container.d-flex.justify-content-between
        a.navbar-brand(href="#") Home Gardener
      
        ul.navbar-nav
         
          li.nav-item
            a.nav-link(href="/create") Add Post
    .container.mt-5
      a.btn.mb-4.btn-primary(href="/") Orqaga
      .card.mb-4
        .card-body
          h1.card-title= post.title
          p.card-text Author: #{post.author}
          p.card-text Plants Type: #{post.plantsType}
          p.card-text Plants Variety: #{post.plantsVariety}
          p.card-text Description: #{post.description}
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
